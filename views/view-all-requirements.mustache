{{> header }}

			<main class="content">
				<div class="container-fluid p-0">
					<table id="example" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>title</th>
                <th>skills</th>
                <th>description</th>
                <th>Assign</th>
            </tr>
        </thead>
        <tbody>
            {{#users}}
            <tr>
                <td>{{ _id }}</td>
                <td>{{ title }}</td>
                <td>{{ description }}</td>
                <td>{{ skills }}</td>
                <td><a class = "btn btn-success" href="/view-all-requirements?id={{_id}}">Assign</a</td>
            </tr>
            {{/users}}
        </tbody>
       
    </table>


    	<div  style="margin-top: 100px">
     <h2>Allocations</h2>


	<table id="example2" class="display" style="width:100%">
        <thead>
            <tr>
                <th>candidate</th>
                <th>Submitted BY</th>
            </tr>
        </thead>
        <tbody>
            {{#fulfill}}
            <tr>
                <td>{{ candidate }}</td>
                <td>{{ submittedby }}</td>
             </tr>
            {{/fulfill}}
        </tbody>
       
    </table>


	<div  style="margin-top: 100px">
     <h2>Candidates</h2>


	<table id="example3" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>name</th>
                <th>email</th>
                <th>skills</th>
                 <th>Expirence</th>
                <th>task</th>
            </tr>
        </thead>
        <tbody>
            {{#candidates}}
            <tr>
                <td>{{ _id }}</td>
                <td>{{ name }}</td>
                <td>{{ email}}</td>
                <td>{{ skills}}</td>
                <td>{{ expirence}}</td>
                <td><a class = "btn btn-primary" href="/fullfill?id={{ email }}&requirement={{requirement}}">fullfill</a</td>
            </tr>
            {{/candidates}}
        </tbody>
       
    </table>









				</div>
			</main>

		</div>
	</div>

	<script src="js/app.js"></script> 
	<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
	<script type="text/javascript" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
	
	<script type="text/javascript">
	$(document).ready(function() {
    $('#example').DataTable( {
        "paging":   true,
        "ordering": true,
        "info":     true
    } );
	$('#example2').DataTable( {
        "paging":   true,
        "ordering": true,
        "info":     true
    } );

    $('#example3').DataTable( {
        "paging":   true,
        "ordering": true,
        "info":     true
    } );
} );
	</script>

</body>

</html>