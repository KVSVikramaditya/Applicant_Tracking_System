{{> header }}

			<main class="content">
				<div class="container-fluid p-0">

					<div class="mb-3">
						<h1 class="h3 d-inline align-middle">Add User</h1>
	
					</div>
					<div class="row">
						<div class="col-12 col-lg-6">
							<div class="card">
								<div class="card-header">
									<div class="card-title">
										{{#error}}
							<p class="lead" style="color: red;font-size: 20px;font-weight: bold">
								{{error}}
							</p>
                                   {{/error}}
								   {{#success}}
							<p class="lead" style="color: green;font-size: 20px;font-weight: bold">
								{{success}}
							</p>
                                   {{/success}}
									</div>
								
								<div class="card-body">
                                    <form method="post" action="/add-user" >
                                    
									<input type="text" class="form-control" placeholder="Enter Name" name="name">
                                    <br>
                                    <input type="email" class="form-control" placeholder="Enter Email" name="email">
                                    <br>
                                    <input type="password" class="form-control" placeholder="Enter Password" name="password">
                                    <br>
                                    <select class="form-select mb-3" name="role">
                                        <option selected>Client</option>
                                        <option>Manager</option>
                                        <option>Team Leader</option>
                                        <option>Recruiter</option>
                                      </select>
                                      <button style="background:#6d8ff1" type="submit" type="submit" class="form-control" >Add User</button>
                                    <br>
                                    <form>
								</div>
							</div>
							
						</div>
					</div>

				</div>
			</main>


		</div>
	</div>

	<script src="js/app.js"></script>

</body>

</html>